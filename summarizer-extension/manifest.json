{
  "manifest_version": 3,
  "name": "Condensed",
  "version": "1.0",
  "action": {
    
     
      "default_title" : "Click Me"
    
},
  
"side_panel": {
  "default_path": "js/index.html"
},


"icons": {
  "16": "icons/logo-white16.png",
        "48": "icons/logo-white48.png",
        "128": "icons/logo-white128.png"
  },
  
  "background": {
    "service_worker": "js/background.js"
  },
  "permissions": ["windows", "activeTab", "scripting", "tabs", "sidePanel"],
 "content_scripts": [
  {
    "matches": ["https://*/*", "http://*/*"], 
    "js": ["js/contentScript.js"]
  }
],
"web_accessible_resources": [
  {
    "resources": ["js/index.html"],
    "matches": ["<all_urls>"]
  }
]
}

